<!DOCTYPE html>
<html>
  <head>
    <title>CATALY</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


<!--共通部分-->
  <body>

    <% if user_signed_in? %>  <!-- ログイン時に下記を表示する -->
    <div class="header">

      <div class="menu">

            <%= link_to "/" do %>
              <%= image_tag 'cataly_logo.png', class: 'logo'%>
            <% end %>


      <div class="float_basic_information">

          <div class="envelope">
            <%= link_to  "/rooms/:id/index" do %>
              <div class="envelope_normal">
                <i class="far fa-envelope"></i>
              </div>
            <% end %><!-- DM一覧に遷移する -->
          </div>



        <!--  <%= link_to "通知", "/users/notifications" %> -->  <!-- 通知に遷移する（未開発） -->

          <% if unchecked_notifications.any? %>
            <i class="fa fa-circle" style="color: gold;"></i>
          <% end %>


          <%= link_to "/users/#{current_user.id}/show" do %> <!-- マイページに遷移する -->
            <% if current_user.sex == "男性" %>
              <img src=<%= current_user.image %> class = "icon_image_men_header">
            <% elsif current_user.sex  == "女性"%>
              <img src=<%= current_user.image %> class = "icon_image_women_header">
            <%else%>
              <img src=<%= current_user.image %> class = "icon_image_other_header">
            <% end %>
          <% end %>

      </div>
      </div>
  </div>

<% else %>
  <div class="header">
    <div class="menu">
      <%= link_to "/" do %>
        <%= image_tag 'cataly_logo.png', class: 'logo'%>
      <% end %>
        <div class="login_new">
          <div class="login">
            <%= link_to "ログイン", new_user_session_path, class: 'post' %> <!-- ログイン画面に移行する -->
          </div>
          <div class="new">
            <%= link_to "新規登録", new_user_registration_path, class: 'post' %> <!-- 新規登録画面に移行する -->
          </div>
        </div>

    </div>
  </div>




  <% end %>

    <%= yield %>
  </body>
</html>
